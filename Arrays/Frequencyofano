//how many times a no is repeated
#include <iostream>
using namespace std;
int main(){
	int n;
	cin>>n;
	int arr[n];
	int count;
	for(int i=0;i<n;i++){
		cin>>arr[i];
	}
	
	for(int i=0;i<n;i++){
		bool flag=false;
		count=0;
		for(int j=0;j<n;j++){
			if(arr[i]==arr[j]){
				count=count+1;
				flag=true;
				
			}
			
			
		}
		if(flag==true){
			
			cout<<arr[i]<<" "<<count;
			cout<<endl;
			
		}
		
	}
	
}
